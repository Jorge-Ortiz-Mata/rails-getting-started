<div class="flex flex-col justify-center py-12 sm:px-6 lg:px-8 min-h-screen">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">¡Registrate de manera gratuita!</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white px-6 py-12 shadow sm:rounded-lg sm:px-12">
      <%= form_with(model: @user, class: 'flex flex-col w-full gap-5 items-center') do |f| %>
        <div class="flex flex-col w-full items-start">
          <%= f.label :email, 'Correo electrónico:', class: 'block text-sm font-medium leading-6 text-gray-900' %>
          <%= f.email_field :email, class: "input-style #{error_border(@user.errors.include?(:email))}" %>
          <% if @user.errors.include?(:email) %>
            <%= render 'shared/error_input', { object: @user, attribute: :email } %>
          <% end %>
        </div>

        <div class="flex flex-col w-full items-start gap-1">
          <%= f.label :password, 'Contraseña:', class: 'block text-sm font-medium leading-6 text-gray-900' %>
          <%= f.password_field :password, class: "input-style #{error_border(@user.errors.include?(:password))}" %>
          <span class="text-xs text-sidebarTextColor text-slate-500 italic">La contraseña debe tener al menos 8 caracteres</span>
          <% if @user.errors.include?(:password) %>
            <%= render 'shared/error_input', { object: @user, attribute: :password } %>
          <% end %>
        </div>

        <div class="flex flex-col w-full items-start gap-1">
          <%= f.label :password_confirmation, 'Confirmar contraseña:', class: 'block text-sm font-medium leading-6 text-gray-900' %>
          <%= f.password_field :password_confirmation, class: "input-style #{error_border(@user.errors.include?(:password_confirmation))}" %>
          <% if @user.errors.include?(:password_confirmation) %>
            <%= render 'shared/error_input', { object: @user, attribute: :password_confirmation } %>
          <% end %>
        </div>

        <div class="flex items-center justify-center w-full">
          <%= f.submit 'Crear cuenta', class: 'flex w-full justify-center rounded-md bg-red-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600' %>
        </div>
      <% end %>
    </div>

    <p class="mt-10 text-center text-sm text-gray-500">
      Ya tienes una cuenta?
      <%= link_to login_path, class: 'font-semibold leading-6 text-red-600 hover:text-red-500' do %>
        Inicia sesión con tu cuenta
      <% end %>
    </p>
  </div>
</div>
